<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pcmazzters.activity.AboutActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/action_bar_about"
        android:elevation="4dp"
        android:background="#000000"
        android:navigationIcon="@color/colorWhite"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayoutAbout"
        android:orientation="vertical"
        android:layout_below="@+id/action_bar_about"
        android:background="#ffffff"
        android:weightSum="1">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageViewAbout"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_weight="1" />

        <TextView
        android:text="FASTREPAIR"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:id="@+id/textView1About"
        android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="15dp"        />
        <TextView
            android:text="automate system of service center"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/textView2About"
            android:textAlignment="center"
            android:layout_marginTop="7dp"            />
        <TextView
            android:text="for electronics repair "
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/textView3About"
            android:textAlignment="center"/>
        <TextView
            android:text="version 3.06"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:id="@+id/textView4About"
            android:textAlignment="center"
            android:layout_marginTop="100dp"            />
        <TextView
            android:text="author Petsevich Valery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5About"
            android:textAlignment="center"/>
        <TextView
            android:text="pv1.15po"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6About"
            android:textAlignment="center"/>
        <TextView
            android:text="last update - 06.03.2017"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7About"
            android:textAlignment="center"/>

    </LinearLayout>

</RelativeLayout>
